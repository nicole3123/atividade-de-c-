#include <iostream>
   using namespace std;
   int main() {
      
       int n[8];
       for (int i = 0; i < 8; i++) {
           cout << "Digite o número ";
       cin >> n[i];}


       cout << "Os valores digitados foram: ";
       for (int i = 0; i < 5; i++) {
           cout << n[i] << " ";
       }


       float maior = n[0], menor = n[0];
       float posicao_max = n[0], posicao_min = n[0];
      
       for (int i = 1; i < 8; i++) {
           if (n[i] > maior){
               maior = n[i];
               posicao_max = i;
           }
           if (n[i] < menor){
               menor = n[i];
               posicao_min= i;
           }
       }


        cout << "O maior valor é " << maior << " e está na posição " << posicao_max + 1 << endl;
        cout << "O menor valor é " << menor << " e está na posição " << posicao_min + 1 << endl;
   return 0;
   }
